@startuml
!theme plain
title Byte de Sabor UML Diagram

class Usuario {
  - _id: String
  - nome: String
  - email: String
  - foto: String
  - endereco: String
  - senha: String
  - isAdmin: Boolean
}

class Produto {
  - _id: String
  - tipo: String
  - nome: String
  - descricao: String
  - preco: float
  - emEstoque: Boolean
}

class Pedido {
  - _id: String
  - preco: float
  - pago: Boolean
  - usuario: Usuario
  - status: String
  - date: Date
  - items: List<Item>
}

class Item {
  - nome: String
  - quantity: int
  - toppings: List<Acompanhamento>
}

class Acompanhamento {
  - _id: String
  - nome: String
  - preco: float
}

Usuario "1" --> "*" Pedido
Pedido "*" --> "*" Produto
Produto "*" --> "*" Acompanhamento
Pedido "*" --> "*" Item
Item "*" --> "*" Acompanhamento

@enduml